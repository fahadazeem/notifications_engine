<section class="vh-100" style="background-color: #eee;">
  <div class="container h-80">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body">
            <div class="row justify-content-center">
              <div class="col-md-12 col-lg-8 col-xl-6 order-2 order-lg-1">
                <p class="text-center h2 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-secondary">Notification Details</p>
                <p id="notice"><%= notice %></p>

                <p>
                  <strong>Title:</strong>
                  <%= @notification.title %>
                </p>

                <p>
                  <strong>Content:</strong>
                  <%= @notification.content %>
                </p>

                <p>
                  <strong>Importance:</strong>
                  <%= @notification.importance %>
                </p>

                <p>
                  <strong>Day:</strong>
                  <%= @notification.day %>
                </p>

                <p>
                  <strong>Tag:</strong>
                  <%= @notification.tag %>
                </p>

                <p>
                  <strong>Users:</strong>
                </p>

                <p>
                  <%= @notification.user.email %>
                </p>

                <%= link_to 'Back', notifications_path, class: 'btn btn-warning text-white' %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

